    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' benefits--' + modsList[i].trim();
      }
    }

  .benefits(class=allMods)&attributes(attributes)
    .benefits__inner
      each item in data
        +benefits-block(item)


mixin benefits-block(data)
  .benefits__block
    if (data.title)
      .benefits__title!= data.title
    if (data.subtitle)
      .benefits__subtitle!= data.subtitle
    if (data.list)
      +benefits-items(data.list)

mixin benefits-items(data)
  .benefits__list
    each el in data
      .benefits__item
        .benefits__item-icon!= el.icon
        .benefits__item-text!= el.text
